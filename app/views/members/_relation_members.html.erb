<div class="container">
  <div class="content">
    <h4>共通点を持つ社員はこちら</h4>
    <% @relation_members.size.times do |number| %>
    <% next if @relation_members[number].id == this_member.id  || @relation_members[number].nil? %>
    <div class="col-md-2 col-xs-2">
      <%= link_to image_tag( @relation_members[number].image.url, :size => "50x50"), member_path(@relation_members[number].id), :target=>["_blank"] %>
      <br>
      <%= link_to @relation_members[number].name, member_path(@relation_members[number].id)  %>
    </div>
    <% end %>
  </div>
</div>
