<body>
  <%= flash[:error] %>
  <%= form_for :admin_user_logins, url: login_admin_path do |f| %>
  <div class="container">
    <h3>管理者 Login</h3>
    <div class="panel panel-default panel-body">
        <div class="row">
            <div class="form-group">
              <%= f.label :email, class: "col-lg-2 control-label"  %>
              <div class="col-lg-10">
                <%= f.text_field :email, class: "form-control", placeholder: "email"  %>
              </div>
            </div>

          <div class="form-group">
            <%= f.label 'password', class: "col-lg-2 control-label" %>
            <div class="col-lg-10">
              <%= f.password_field  :password, class: "form-control", rows: "3"  %>
            </div>
          </div>
        </div>
        <%= f.submit 'login', class: "btn btn-material-pink" %>
    </div>
    <% end %>
  </body>

