<%= form_for @comment do |f|  %>
<div class="communitypost row breadcrumb">
  <div class="form-group">
    <%= f.label :comment, 'コメント投稿', class: "col-md-2 col-xs-2 control-label" %>
    <div class="col-md-10 col-xs-10">
      <%= f.text_area :comment, class: "input", placeholder: "投稿内容を入力してください", rows: "3"  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, '写真投稿', class: "col-md-2 col-xs-2 control-label" %>
    <div class="uploadButton">
      ファイルを選択
      <input onchange="uv.style.display='inline-block'; uv.value = this.value;" type="file"/>
      <input class="uploadValue" disabled id="uv" type="text"/>
      <%= f.file_field :image %>
    </div>
  </div>
</div>
    <%= f.hidden_field 'community_id', :value => params[:id] %>
    <%= f.submit '投稿', class: 'btn btn-material-pink' %>
    <input class="btn btn-material-grey" type="reset" value="キャンセル">
  <% end %>
