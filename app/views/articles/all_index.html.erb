<%= render template: 'layouts/_nav_bar' %>


<body>
  <div class="container">
    <div class="panel panel-default panel-body">
<!--タブ-->
      <ul class="nav nav-tabs" role="tablist">
        <li class="active" role="presentation">
          <a aria-controls="home" data-toggle="tab" href="#home" role="tab">Today's ピックアップ</a>
        </li>
        <li role="presentation">
          <a aria-controls="profile" data-toggle="tab" href="#profile" role="tab">新着まとめ</a>
        </li>
        <li role="presentation">
          <a aria-controls="messages" data-toggle="tab" href="#messages" role="tab">みんなのイイネ</a>
        </li>
        <li role="presentation">
          <a aria-controls="settings" data-toggle="tab" href="#settings" role="tab">ギャラリー</a>
        </li>
      </ul>

<!-- タブのコンテンツ-->
      <div class="tab-content">
        <div class="tab-pane active" id="home" role="tabpanel">
          <!--記事表示-->
          <% @articles.each do |article| %>
          <div class="list-group">
            <div class="list-group-item">
              <div class="row-picture">
                <%= link_to image_tag(article.image.url, :size => "50x50"), article.url, :target=>["_blank"] %>
              </div>
              <div class="row-content">

                <h4 class="list-group-item-heading"><%= link_to "#{article.title}", article.url, :target=>["_blank"] %></h4>
                <p class="list-group-item-text"><%= article.description %></p>
              </div>
            </div>
            <div class="list-group-separator"></div>
          </div>
          <% end %>
          <!--記事表示-->
        </div>
        <div class="tab-pane" id="profile" role="tabpanel">
          <!--記事表示-->
          <% @articles.each do |article| %>
          <div class="list-group">
            <div class="list-group-item">
              <div class="row-picture">
                <%= link_to image_tag(article.image.url, :size => "50x50"), article.url, :target=>["_blank"] %>
              </div>
              <div class="row-content">

                <h4 class="list-group-item-heading"><%= link_to "#{article.title}", article.url, :target=>["_blank"] %></h4>
                <p class="list-group-item-text"><%= article.description %></p>
              </div>
            </div>
            <div class="list-group-separator"></div>
          </div>
          <% end %>
          <!--記事表示-->
        </div>
        <div class="tab-pane" id="messages" role="tabpanel">
          <!--記事表示-->
          <ol>
          <% @articles.each do |article| %>
          <li class="list-group">
            <div class="list-group-item">
              <div class="row-picture">
                <%= link_to image_tag(article.image.url, :size => "50x50"), article.url, :target=>["_blank"] %>
              </div>
              <div class="row-content">

                <h4 class="list-group-item-heading"><%= link_to "#{article.title}", article.url, :target=>["_blank"] %></h4>
                <p class="list-group-item-text"><%= article.description %></p>
              </div>
            </div>
            <div class="list-group-separator"></div>
          </li>
          <% end %>
          <!--記事表示-->
        </div>
        <div class="tab-pane" id="settings" role="tabpanel">
          <!--写真表示-->
          <% Community.all.each do |community| %>
              <figure style="float: left; margin: 1.5%">
                <a href="/communities/<%= community.id %>">
                 <%= link_to image_tag(community.image.url, :size => "150x150"), community_path(community.id) %>
                 <figcaption>
                   <h4><%= link_to community.name, community_path(community.id) %></h4>
                   <p><%= link_to community.description, community_path(community.id) %></p>
                 </figcaption>
               </a>
               </figure>
          <% end %>
          <!--写真表示-->
        </div>
      </div>
    </div>
  </div>
</body>
