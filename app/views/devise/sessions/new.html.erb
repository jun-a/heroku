<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
<!---デザイン用のvalidation出力-->
  <% if flash[:alert].present? %>
  <% flash[:alert] = "メールアドレスもしくはパスワードが間違っています" %>
  <div class="container" id="error" style="background-color: rgba(255,0,0,0.2); margin-bottom: 1%;">
    <a href="#" onclick="document.getElementById('error').style.visibility = 'hidden';" style="float: right;">x</a>
    <h4 style="text-align: center"><%= flash[:alert] %>
    </h4>
  </div>
  <% end %>

  <div class="panel panel-default panel-body">
    <div class="row">
      <div class="form-group">
        <%= f.label :email, class: "col-lg-2 control-label"  %>
        <div class="col-lg-10">
          <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "email" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'password', class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", rows: "3" %>
        </div>
      </div>
<!--remeber me?-->
      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="check_box">
          <%= f.label :remember_me, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.check_box :remember_me %>
            <% end -%>
          </div>
        </div>
      </div>

    </div>
    <%= f.submit 'Login', class: "btn btn-material-pink" %>
    <%= link_to 'アカウントを持っていない方はこちら', new_member_registration_path, class: "btn btn-material-pink"  %>
  </div>
  <% end %>
