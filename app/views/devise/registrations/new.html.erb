<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<!---デザイン用のvalidation出力-->
<% if resource.errors.present? %>
<div class="container" style="background-color: rgba(255,0,0,0.2); margin-bottom: 1%;" id="error">
  <a href="#" onclick="document.getElementById('error').style.visibility = 'hidden';" style="float: right;">x</a>
  <h4 style="text-align: center"><%= resource.errors.messages[:email][0]   %>
</h4>
</div>
<% end %>

<div class="container">
  <div class="panel panel-default panel-body">
      <div class="row">
        <div class="communitytable">
          <div class="form-group">
            <%= f.label :email, class: "col-lg-2 control-label"  %>
            <div class="col-lg-10">
              <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "email" %>

            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'password', class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", rows: "3" %>
          </div>
        </div>
      </div>
      <%= f.submit 'Sign up', class: 'btn btn-material-pink' %>
      <%= link_to 'アカウントをお持ちの方はこちら', new_member_session_path, class: "btn btn-material-pink"  %>
  </div>
  <% end %>

<style media="screen">
  .field_with_errors{
    background-color: #FFFFFF;
    width: 100%;
  }
</style>
