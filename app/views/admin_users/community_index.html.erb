<%= render template: 'layouts/_nav_bar' %>
<div class="container">
  <div class="panel panel-default">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>No</th>
                <th>コミュニティ名</th>
                <th>活動内容</th>
            </tr>
        </thead>
        <tbody>
          <% @communities.each_with_index do |community, idx| %>
            <% if idx % 2 == 0 %>
            <tr class="success">
            <% else %>
            <tr>
            <% end %>
                <td><%= community.id %></td>
                <td><%= community.name %></td>
                <td><%= community.description %></td>
                <td><%= link_to '詳細', community_path(community.id) %></td>
                <td><%= link_to '削除', community_path(community.id) %></td>
            </tr>
            <% end %>
          </tbody>
    </table>
  </div>
</div>
